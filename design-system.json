{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Portfolio Design System",
  "version": "1.0.0",
  "colors": {
    "primary": {
      "100": "#F5EBFF",
      "200": "#EBD7FF",
      "300": "#E0C7FF",
      "400": "#C192FF",
      "700": "#580092"
    },
    "secondary": {
      "400": "#FFF3C2",
      "600": "#FFDF5B",
      "700": "#EBDB32"
    },
    "neutral": {
      "700": "#212121"
    },
    "backgrounds": {
      "primary": "#FFFFFF",
      "main": "#FFFEFA"
    },
    "semantic": {
      "textPrimary": "#212121",
      "textHeaders": "#580092",
      "textOnPrimary": "#FFFFFF",
      "backgroundMain": "#FFFEFA",
      "backgroundCard": "#FFFFFF",
      "borderDefault": "#E0C7FF",
      "buttonPrimary": "#580092",
      "buttonPrimaryText": "#FFFFFF",
      "buttonSecondaryText": "#580092",
      "buttonSecondaryHover": "#E0C7FF",
      "accentPrimary": "#580092",
      "accentSecondary": "#EBDB32"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": "Kantumruy",
      "heading": "Kanit",
      "fallback": "Noto Sans, sans-serif"
    },
    "fontSizes": {
      "caption": "12px",
      "bodySmallBold": "14px",
      "body": "16px",
      "button": "16px",
      "bodyLarge": "18px",
      "subtitle2": "20px",
      "subtitle": "24px",
      "header2": "32px",
      "header": "48px"
    },
    "fontWeights": {
      "regular": 400,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.3,
      "normal": 1.4,
      "relaxed": 1.6,
      "button": "24px",
      "header2": "32px",
      "bodyLarge": 1.5,
      "bodySmallBold": 1.5
    },
    "letterSpacing": {
      "none": "0",
      "navLink": "0.8px",
      "bodyLarge": "0.9px",
      "subtitle2": "1px",
      "subtitle": "1.2px",
      "header": "2.4px"
    },
    "presets": {
      "header": {
        "fontFamily": "Kanit",
        "fontSize": "48px",
        "fontWeight": 400,
        "lineHeight": 1.4,
        "letterSpacing": "2.4px"
      },
      "header2": {
        "fontFamily": "Kanit",
        "fontSize": "32px",
        "fontWeight": 400,
        "lineHeight": "32px",
        "letterSpacing": "0"
      },
      "subtitle": {
        "fontFamily": "Kantumruy",
        "fontSize": "24px",
        "fontWeight": 700,
        "lineHeight": 1.3,
        "letterSpacing": "1.2px"
      },
      "subtitle2": {
        "fontFamily": "Kantumruy",
        "fontSize": "20px",
        "fontWeight": 700,
        "lineHeight": 1.3,
        "letterSpacing": "1px"
      },
      "bodyLarge": {
        "fontFamily": "Kantumruy",
        "fontSize": "18px",
        "fontWeight": 400,
        "lineHeight": 1.5,
        "letterSpacing": "0.9px"
      },
      "body": {
        "fontFamily": "Kantumruy",
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": 1.6,
        "letterSpacing": "0.8px"
      },
      "bodySmallBold": {
        "fontFamily": "Kantumruy",
        "fontSize": "14px",
        "fontWeight": 700,
        "lineHeight": 1.5,
        "letterSpacing": "0"
      },
      "caption": {
        "fontFamily": "Kantumruy",
        "fontSize": "12px",
        "fontWeight": 400,
        "lineHeight": 1.6,
        "letterSpacing": "0"
      },
      "button": {
        "fontFamily": "Kantumruy",
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": "24px",
        "letterSpacing": "0"
      },
      "navLink": {
        "fontFamily": "Kantumruy",
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": 1.6,
        "letterSpacing": "0.8px"
      }
    }
  },
  "spacing": {
    "xxs": "4px",
    "xs": "8px",
    "s": "16px",
    "m": "24px",
    "l": "32px",
    "xl": "40px",
    "xxl": "64px"
  },
  "borderRadius": {
    "s": "16px",
    "m": "24px",
    "l": "32px",
    "xxl": "48px"
  },
  "shadows": {
    "card": "0px 1px 2px 5px rgba(0, 0, 0, 0.01), 3px 4px 4px -3px rgba(0, 0, 0, 0.1)"
  },
  "breakpoints": {
    "mobile": "320px",
    "tablet": "768px",
    "desktop": "1280px"
  }
}
